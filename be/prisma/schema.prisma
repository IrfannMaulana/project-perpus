generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

/*
  Tabel: Petugas
*/
model Petugas {
  id_petugas   Int            @id @default(autoincrement())
  nama_petugas String
  username     String         @unique
  password     String

  // Relasi ke peminjaman
  peminjaman   Peminjaman[]
}

/*
  Tabel: Anggota
*/
model Anggota {
  id_anggota   Int      @id @default(autoincrement())
  nis          String  @unique
  nama_anggota String
  alamat       String
  no_hp        String

  // Relasi ke peminjaman
  peminjaman   Peminjaman[]
}

/*
  Tabel: Buku
*/
model Buku {
  id_buku      Int            @id @default(autoincrement())
  judul        String
  pengarang    String
  penerbit     String
  tahun_terbit Int
  kategori     String

  // Relasi ke peminjaman
  peminjaman   Peminjaman[]
}

/*
  Tabel: Peminjaman
*/
model Peminjaman {
  id_peminjaman   Int      @id @default(autoincrement())
  
  // FK
  id_anggota      Int
  id_buku         Int
  id_petugas      Int

  // Kolom tanggal
  tanggal_pinjam   DateTime @default(now())
  tanggal_kembali  DateTime?
  status           String   @default("dipinjam")
  // dipinjam / kembali

  // Relasi ke tabel lain
  anggota   Anggota  @relation(fields: [id_anggota], references: [id_anggota])
  buku      Buku     @relation(fields: [id_buku], references: [id_buku])
  petugas   Petugas  @relation(fields: [id_petugas], references: [id_petugas])
}